<div class="row">
  <aside class="col-xl-1">
    <%= render 'sidemenu' %>
  </aside>
  <div class="col-xl-11">
    <div class="card" id="company">
      <div class="card-header">
        <strong>編集</strong>
      </div>
      <div class="card-body">
        <%= form_for(:company, url: companies_update_path) do |f| %>
           
          <%= f.hidden_field :id, value: @get_company.id %>
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, :value => @get_company.name , class: 'form-control'  %>
          </br>
          <%= f.label :address, "住所" %>
          <%= f.text_area :address, :value => @get_company.address , class: 'form-control'  %>
          </br>
          区分：
          <%= f.label :hospital, class: "form-check form-radio-inline ml-3" do %>
            
            <%= f.radio_button :hospital, :hospital, :checked => (Hospital.find_by(company_id: @get_company.id)!=nil)  %> 
            <%= f.label :病院, class: "hospital" %>
            <br/>
            <%= f.radio_button :hospital, :vendor, :checked => (Vendor.find_by(company_id: @get_company.id)!=nil) %> 
            <%= f.label :ベンダー, class: "vendor" %>
          <% end %>
          </br>
            <%= f.submit '登録', class: "btn btn-outline-primary fluid" %>
        <% end %>
      </div>
    </div>
  </div>
</div>