<% provide(:title,"列情報") %>
<div class="row">
  <aside class="col-xl-1">
    <%= render 'sidemenu' %>
  </aside>
  <div class="col-xl-11">
    <div class="card" id="question">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <%= @question.name %> 
          </div>
          <div class="col-md-2">
            列情：<%= @question.column %> 
          </div>
          <div class="col-md-2">
            <%= link_to "列情報編集", question_edit_path(:id => @question.id), class: "btn btn-outline-success btn-block", role: "button" %>    
          </div>
          <div class="col-md-2">
            <%= link_to "列情報削除", question_path(:id => @question.id), class: "btn btn-outline-danger btn-block", role: "button", method: :delete, data: { confirm: "You sure?" } %>
          </div>
        </div>
        
      </div>
      <div class="card-body">
        <% if @answers!=nil %>
          <%= render 'answer_items' %>
        <% else %>
          No Answer!
        <% end %>
      </div>
      <div class="card-footer">
        <%= link_to "列情報追加", answer_new_path(:id => @question.id), class: "btn btn-outline-success", role: "button" %>
      </div>
    </div>
  </div>
</div>