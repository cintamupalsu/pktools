<% provide(:title, "新規要求") %>
<div class="row">
  <aside class="col-xl-1">
    <%= render 'sidemenu' %>
  </aside>
  <div class="col-xl-11">
    <div class="card" id="question">
      <div class="card-header text-center">
        <strong>新規要求</strong>
      </div>
      <div class="card-body">
        <%= form_for(:question, url: question_new_path) do |f| %>
     
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, placeholder: "要求" , class: 'form-control'  %>
          </br>
          <%= f.label :column, "列" %>
          <%= f.text_field :column,  placeholder: "A" , class: 'form-control'  %>
          </br>
            <%= f.submit '要求登録', class: "btn btn-success fluid" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
