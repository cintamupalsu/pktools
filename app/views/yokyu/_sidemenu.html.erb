
<div class="card" style="width: 6rem;">
  <% if @selected_item==0 %>
    <a href="<%= yokyu_path %>" class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="要求仕様書">
  <% else %>
    <a href="<%= yokyu_path %>" class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="要求仕様書">
  <% end %>
    <%= image_tag("ico_doc.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  </a>
  <% @file_inprogress = FileManager.where("status=0 AND user_id=?", current_user.id).count %>
  <% if @selected_item==1 %>
    <% if @file_inprogress>0 %>
      <a href="<%= yokyufile_path %>" class="card-header pl-2 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="ファイル管理">
    <% else %>
      <a href="<%= yokyufile_path %>" class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="ファイル管理">
    <% end %>
  <% else %>
    <% if @file_inprogress>0 %>
      <a href="<%= yokyufile_path %>" class="card-body pl-2 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="ファイル管理">
    <% else %>
      <a href="<%= yokyufile_path %>" class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="ファイル管理">
    <% end %>
  <% end %>
  <% if @file_inprogress>0 %>
    <%= content_tag :span, @file_inprogress, class: 'badge badge-pill badge-danger float-right' %>
    <%= image_tag("ico_file.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon", class: "float-left") %>
  <% else %>
    <%= image_tag("ico_file.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  <% end %>
  </a>

  <% if @selected_item==7 %>
    <a href="#" class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="ダウンロード">
  <% else %>
    <a href="#" class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="ダウンロード">
  <% end %>
    <%= image_tag("ico_download.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  </a>


  <% if @selected_item==2 %>
    <a href="<%= manage_sentences_path %>" class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="分管理">
  <% else %>
    <a href="<%= manage_sentences_path %>" class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="分管理">
  <% end %>
    <%= image_tag("ico_detail.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  </a>

  <% @sentence_count = Sentence.where("user_id=?",current_user.id).count %>
  <% if @selected_item==3 %>
    <% if @sentence_count>0 %>
      <a href="<%= senconfirm_path %>" class="card-header pl-2 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="要求確認">
    <% else %>
      <a href="<%= senconfirm_path %>" class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="要求確認">
    <% end %>
  <% else %>
    <% if @sentence_count>0 %>
      <a href="<%= senconfirm_path %>" class="card-body pl-2 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="要求確認">
    <% else %>
      <a href="<%= senconfirm_path %>" class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="要求確認">
    <% end %>
  <% end %>
  <% if @sentence_count>0 %>
    <%= content_tag :span, @sentence_count, class: 'badge badge-pill badge-danger float-right' %>
    <%= image_tag("ico_check.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon", class: "float-left") %>
  <% else %>
    <%= image_tag("ico_check.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  <% end %>
  </a>
  
  <% if @selected_item==4 %>
    <a href= <%= questions_path %> class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="列所管理">
  <% else %>
    <a href= <%= questions_path %> class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="列所管理">
  <% end %>
    <%= image_tag("ico_list.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  </a>
  
  <% if @selected_item==6 %>
    <a href="<%= companies_path %>" class="card-header pl-4 pt-1 pb-1 bg-info" data-toggle="tooltip" data-placement="right" title="顧客管理">
  <% else %>
    <a href="<%= companies_path %>" class="card-body pl-4 pt-1 pb-1 bg-light" data-toggle="tooltip" data-placement="right" title="顧客管理">
  <% end %>
    <%= image_tag("ico_vendor.png", alt:"yokyu icon", size: "40x45", id: "yokyu_icon") %>
  </a>

</div>  
  