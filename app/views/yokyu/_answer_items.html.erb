<div class="col-md-12 bg-white">
  <br/>
  <ul class="answers">
    <% @answers.each do |answer| %>
      <div class="row">
        <div class="col-md-7">
          <li>
            <%= link_to answer.name, answer_edit_path(:id => answer.id) %>
          </li>
        </div>
        <div class="col-md-1">
            列情: <%= answer.column %>
        </div>
        <div class="col-md-2">
          <%= link_to "列情報編集", answer_edit_path(:id => answer.id), class: "btn btn-outline-success btn-block", role: "button" %>
        </div>  
        <div class="col-md-2">
          <%= link_to "列情報削除", answer_path(:id => answer.id), class: "btn btn-outline-danger btn-block", role: "button", method: :delete, data: { confirm: "You sure?" } %>
        </div>
      </div>
    <% end %>
  </ul>
  <br/>
</div>
