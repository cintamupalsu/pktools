        <a class="nav-link" id="settei-tab" data-toggle="tab" href="#settei" role="tab" aria-controls="settei" aria-selected="false">設定</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="kekka-tab" data-toggle="tab" href="#kekka" role="tab" aria-controls="kekka" aria-selected="false">結果</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="touroku" role="tabpanel" aria-labelledby="touroku-tab">
        <div class="row bg-white" id="innertab">
