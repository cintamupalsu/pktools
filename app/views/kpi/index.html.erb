<% provide(:title,"KPI") %>
<div class="row">
  <aside class="col-xl-1">
    <%= render 'sidemenu' %>
  </aside>
  <div class="col-xl-11">
    <div class="card ml-1 mb-1" id="performance_card">
      <div class="card-header">
        今月点：<%= @total_points %>
      </div>
    </div>
    <% counter=0 %>
    <% @performances.each do |performance| %>
      <% if counter==0 || counter==4 %>
        <div class="row ml-1">
      <% end %>
        <div class="col-4">
          <div class="card h-100" style="width: 21rem;">
            <% if performance.k_pic.url!=nil%>
              <%= image_tag("#{performance.k_pic.url}", alt:"task card icon", id: "task_card_icon", class: "card-img-top", size: "100x200") %>
            <% else %>
              <%= image_tag("SBS04.jpg", alt:"task card icon", id: "task_card_icon", class: "card-img-top", size: "100x200") %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%=performance.name%></h5>
              <p class="card-text"><%=performance.description%></p>
              
              <footer class="blockquote-footer text-right">満点： <cite title="Source Title"><%=performance.points%>点</cite></footer>
            </div>
            <div class="card-footer">
              <a href="<%=kpi_assessement_path(:id => performance.id) %>" class="btn btn-outline-primary btn-block">します</a>
            </div>
          </div>
        </div>
        <% counter+=1 %>
      <% if counter==0 || counter==4 %>
        <% counter=0 %>
        </div>
      <% end %>
    <% end %>
    <% if counter!=0 || counter!=4 %>
      </div>
    <% end %>
  </div>
</div>

